<h2>Lista de categorias</h2>
<br>
<a href="/admin/categorias/add"><button class="btn btn-success">nova categoria</button></a>

{{#each categorias}}
    <div class="card mt-3">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>slug: {{slug}}</small><br>
            <small>Data de criação: {{date}}</small>
           <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success">editar</button></a>
           <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-04" >Deletar categoria</button>


           </form>
        </div>
    </div>
{{else}}
    <h3>Nenhuma categoria registrada</h3>
{{/each}}